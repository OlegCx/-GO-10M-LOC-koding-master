.transferownershipbutton
  display                   flex
  margin-left               10px
  align-items               center
  color                     #f2778a
  .cancel-btn
    color                   #5e5e5e
    margin-right            15px

  .select-box
    flex                    1 0 auto
    margin-right            10px
    min-width               70px
    max-width               130px

.transfer-ownership-not-possible
  rel()
  margin-right              21px
  .transfernotpossible
    abs()
    border                  1px solid #727272
    background-color        #727272
    color                   white
    border-radius           50%
    size                    14px 14px
    top                     3px
    right                   -21px
    &:before
      content               '?'
      abs                   0 0 -5px 4px

